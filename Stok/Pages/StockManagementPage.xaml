<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stok.Pages.StockManagementPage"
             Title="Stok Yönetimi">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Stok Yönetimi"
                   FontSize="28"
                   FontAttributes="Bold" />
            <Picker Title="Malzeme"
                    ItemsSource="{Binding Materials}"
                    SelectedItem="{Binding SelectedMaterial}"
                    ItemDisplayBinding="{Binding Name}" />
            <Frame IsVisible="{Binding HasSelectedMaterial}"
                   Padding="12"
                   BorderColor="{DynamicResource SecondaryColor}"
                   HasShadow="False">
                <VerticalStackLayout Spacing="4">
                    <Label Text="{Binding SelectedMaterial.Name}"
                           FontAttributes="Bold" />
                    <Label Text="{Binding SelectedMaterial.SerialOrLotDisplay}" />
                    <Label Text="{Binding SelectedMaterial.Quantity, StringFormat='Stoktaki Adet: {0}'}" />
                </VerticalStackLayout>
            </Frame>
            <Picker Title="Kimden"
                    ItemsSource="{Binding Users}"
                    SelectedItem="{Binding SelectedFrom}" />
            <Picker Title="Kime"
                    ItemsSource="{Binding Users}"
                    SelectedItem="{Binding SelectedTo}" />
            <Entry Placeholder="Adet"
                   Keyboard="Numeric"
                   Text="{Binding QuantityText}" />
            <Label Text="Depo hesabı sınırlamalardan muaftır."
                   FontSize="12"
                   TextColor="{DynamicResource SecondaryTextColor}" />
            <Button Text="{Binding ActionButtonText}"
                    Clicked="OnSubmit"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
