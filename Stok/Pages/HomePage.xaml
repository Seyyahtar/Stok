<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stok.Pages.HomePage"
             Title="S-Tok">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <Label Text="S-Tok" FontSize="36" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Text="İhtiyacınız olan modülü seçin" FontSize="18" HorizontalTextAlignment="Center" />
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="16">
                <Button Text="Envanter" Grid.Row="0" Grid.ColumnSpan="2" HeightRequest="56"
                        Clicked="OnStockClicked" />
                <Button Text="Vaka" Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="56"
                        Clicked="OnCaseClicked" />
                <Button Text="Geçmiş" Grid.Row="2" Grid.Column="0" HeightRequest="56"
                        Clicked="OnHistoryClicked" />
                <Button Text="Kontrol Listesi" Grid.Row="2" Grid.Column="1" HeightRequest="56"
                        Clicked="OnChecklistClicked" />
                <Button Text="Ayarlar" Grid.Row="3" Grid.ColumnSpan="2" HeightRequest="56"
                        Clicked="OnSettingsClicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
