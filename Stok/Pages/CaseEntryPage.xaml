<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stok.Pages.CaseEntryPage"
             Title="Vaka">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <Label Text="Vaka"
                   FontSize="30"
                   FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <VerticalStackLayout>
                    <Label Text="Tarih" />
                    <DatePicker Date="{Binding CaseDate}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Oluşturan" />
                    <Label Text="{Binding CreatedByDisplay}"
                           FontAttributes="Semibold"
                           VerticalOptions="Center" />
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Spacing="12">
                <Label Text="Hastane"
                       FontAttributes="Semibold" />
                <Entry Placeholder="Hastane adı"
                       Text="{Binding Hospital}"
                       TextChanged="OnHospitalTextChanged" />
                <CollectionView ItemsSource="{Binding HospitalSuggestions}"
                                SelectionMode="None"
                                IsVisible="{Binding ShowHospitalSuggestions}">
                    <CollectionView.ItemsLayout>
                        <VerticalLinearItemsLayout ItemSpacing="8" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="12"
                                   BorderColor="{DynamicResource SecondaryColor}"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                    <Label Text="{Binding .}" />
                                    <Button Grid.Column="1"
                                            Text="Sil"
                                            Padding="8,4"
                                            Clicked="OnRemoveHospitalSuggestion"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnHospitalSuggestionTapped"
                                                         CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12">
                <Label Text="Doktor"
                       FontAttributes="Semibold" />
                <Entry Placeholder="Doktor adı"
                       Text="{Binding Doctor}"
                       TextChanged="OnDoctorTextChanged" />
                <CollectionView ItemsSource="{Binding DoctorSuggestions}"
                                SelectionMode="None"
                                IsVisible="{Binding ShowDoctorSuggestions}">
                    <CollectionView.ItemsLayout>
                        <VerticalLinearItemsLayout ItemSpacing="8" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="12"
                                   BorderColor="{DynamicResource SecondaryColor}"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                    <Label Text="{Binding .}" />
                                    <Button Grid.Column="1"
                                            Text="Sil"
                                            Padding="8,4"
                                            Clicked="OnRemoveDoctorSuggestion"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnDoctorSuggestionTapped"
                                                         CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12">
                <Label Text="Hasta"
                       FontAttributes="Semibold" />
                <Entry Placeholder="Hasta adı"
                       Text="{Binding Patient}" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12">
                <Label Text="Hasta Notu (Opsiyonel)"
                       FontAttributes="Semibold" />
                <Editor HeightRequest="100"
                        AutoSize="TextChanges"
                        Text="{Binding Note}" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="Kullanılan Malzemeler"
                       FontSize="22"
                       FontAttributes="Bold" />
                <Button Text="Ekle"
                        Grid.Column="1"
                        Clicked="OnAddMaterial"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
            </Grid>

            <CollectionView ItemsSource="{Binding Materials}"
                            SelectionMode="None"
                            EmptyView="Henüz malzeme eklenmedi.">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="16"
                               Margin="0,0,0,12"
                               HasShadow="False"
                               BorderColor="{DynamicResource SecondaryColor}">
                            <Grid RowSpacing="10" ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Malzeme"
                                           FontAttributes="Bold" />
                                    <Entry Text="{Binding Name}"
                                           Placeholder="Malzeme adı"
                                           IsReadOnly="True" />
                                </VerticalStackLayout>
                                <Button Grid.Column="1"
                                        Text="Kaldır"
                                        Padding="8,4"
                                        Clicked="OnRemoveMaterial"
                                        CommandParameter="{Binding .}" />
                                <VerticalStackLayout Grid.Row="1" Spacing="6">
                                    <Label Text="Seri/Lot"
                                           FontAttributes="Bold" />
                                    <Entry Text="{Binding SerialOrLot}"
                                           Placeholder="Seri veya Lot"
                                           TextChanged="OnMaterialSerialChanged" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="6">
                                    <Label Text="Miktar"
                                           FontAttributes="Bold" />
                                    <Entry Text="{Binding Quantity, Mode=TwoWay}"
                                           Keyboard="Numeric"
                                           Placeholder="0"
                                           TextChanged="OnMaterialQuantityChanged" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="4">
                                    <Label Text="{Binding ExpiryDisplay}"
                                           FontSize="13"
                                           TextColor="{DynamicResource SecondaryTextColor}" />
                                    <Label Text="{Binding UbbDisplay}"
                                           FontSize="13"
                                           TextColor="{DynamicResource SecondaryTextColor}" />
                                    <Label Text="{Binding AvailabilityDisplay}"
                                           FontSize="13"
                                           TextColor="{DynamicResource SecondaryTextColor}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="{Binding ValidationMessage}"
                   TextColor="{DynamicResource ErrorTextColor}"
                   IsVisible="{Binding HasValidationMessage}" />

            <Button Text="Vaka Kaydını Oluştur"
                    HeightRequest="56"
                    Clicked="OnSaveClicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
